<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
    <link rel="stylesheet" href="/assets/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <a href="/students/add" class="btn btn-success btn-sm">Add Student</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>No</th>
                <th>Student Name</th>
                <th>Gender</th>
                <th>Birth Date</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student, index) => { %> 
            <tr>
                <td><%= index+1 %> </td>
                <td><%= student.FullName %> </td>
                <td><%= student.gender %> </td>
                <td><%= student.birthDate %> </td>
                <td><%= student.email %> </td>
                <td><%= student.phoneNumber %> </td>
                <td>
                    <button>
                        <a href="/students/edit/<%= student.id %>" style="text-decoration: none; color: black;">Edit</a>
                    </button>
                    <button>
                        <a href="/students/delete/<%= student.id %>" style="text-decoration: none; color: black;">Delete</a>
                    </button>
                </td>
            </tr>
            <% }) %> 
        </tbody>
    </table>
</div>
</body>
</html>